/* pages/my/my.wxss */
.main{
    width: 100%;
    height: 100%;
    position: relative;
}

.top{
    height: 150px;
    margin:10 10px;
    background-color: #ffd479;
    border-bottom: 1px solid #eee;
}

.img_head{
    position: absolute;
    top: 50%;
    left: 28px;
    transform: translateY(-50%);
    height: 80px;
    width: 80px;
    background-color: #fff;
    border-radius: 50%;
    overflow: hidden;
}
.msg_right{
    position: absolute;
    left: 120px;
    top: 50%;
    transform: translateY(-50%);
    height: 80px;
    width: 220px;
    padding: 10px;
    box-sizing: none;
}
.name_user,.id_user{
    display: inline-block;
    width: 200px;
    height: 40px;
    line-height: 40px;
    margin-bottom: 5px;
    padding-left: 5px;
    color: #1e1e1e;
    font-weight: 600;
}
.msg_right .name_user{
    font-size: 18px;
    font-weight: 600;
}
.msg_right .id_user{
    /* background: #794b4b; */
    font-size: 14px;
    padding-left: 7px;   
}


 .go_my{
    display: inline-block;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 30px;
    width: 50px;
    height: 100px;
    line-height: 100px;
    text-align: center;
}

.top .loginbtn{
    position: absolute;
    top: 40px;
    left: 50%;
    transform: translateX(-67%);
    height: 55px;
    width: 300px;
    /* background-color: aqua; */
    line-height: 50px;
    padding-left: 104px;
}

.main_content{
    position: absolute;
    top: 120px;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    height: 280px;
    padding-top: 30px;
    background-color: #ffffff;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    box-shadow: 0 0 10px #ccc;
}