<!--pages/home.wxml-->
<view class="home">
		<van-search placeholder="请输入搜索关键词" background="#ffc76b" shape="round" />
		<view class="swiperbox">
			<swiper indicator-dots="true" autoplay="true" indicator-active-color="#fff" interval="3000" duration="1000" circular="true" class="swiper">
        <swiper-item wx:for="{{swiperImg}}"  wx:for-item="item" wx:key="id">
          <van-image width="100%" height="100%" src="{{item}}" radius="16px" />
        </swiper-item>
      </swiper>
		</view>
    <view class="contain">
			<view>
				<image src="../../static/shenghuo.png"></image>
				<text>生活用品</text>
			</view>
			<view>
				<image src="../../static/shuben.png"></image>
				<text>书本</text>
			</view>
			<view>
				<image src="../../static/shouji.png"></image>
				<text>电子产品</text>
			</view>
			<view>
				<image src="../../static/fendi.png"></image>
				<text>化妆品</text>
			</view>
			<view>
				<image src="../../static/yifu.png"></image>
				<text>服装</text>
			</view>
			<view>
				<image src="../../static/quanbu.png"></image>
				<text>全部分类</text>
			</view>
		</view>
    <view>
      <van-tabs>
        <van-tab title="闲置推荐">
					<van-card num="2" price="2.00" desc="描述信息" title="商品标题" wx:for="{{swiperImg}}" wx:for-item="item"  wx:key="id"
						thumb="{{item}}" />
				</van-tab>
				<van-tab title="收购推荐">
				</van-tab>
      </van-tabs>
    </view>
	</view>

